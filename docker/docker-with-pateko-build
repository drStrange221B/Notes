<build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <image>
                        <name>imagename/${project.artifgaactId}</name>
                    </image>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
    
    Run the maven project in the terminal
    
    mvn spring-boot:build-image
